<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenThemeWhiteIcon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="FullScreenThemeBlackIcon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextOrginal">
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:background">@drawable/bg_white_border_brown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp12</item>
    </style>


    <style name="SearchBar">
        <item name="android:drawableLeft">@drawable/ic_seach</item>
        <item name="android:padding">@dimen/dp12</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp12</item>
    </style>

    <style name="ButtonOrginal">
        <item name="android:padding">@dimen/dp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:background">@drawable/bg_ripple_brown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonSmall">
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:background">@drawable/bg_ripple_brown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
