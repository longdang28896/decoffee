<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_marginHorizontal="@dimen/dp16"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp24"
            android:id="@+id/tv_avatar"
            android:layout_width="@dimen/dp88"
            android:layout_height="@dimen/dp88"
            android:textSize="@dimen/sp36"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_avatar"
            android:gravity="center"
            android:textAllCaps="true" />

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/sp16"
            android:layout_marginTop="@dimen/dp16"
            android:id="@+id/tv_role"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:gravity="bottom"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_user_v3"
            android:drawablePadding="@dimen/dp16"
            android:textSize="@dimen/sp16"
            android:drawableStart="@drawable/ic_user_v3" />

        <View
            android:layout_marginTop="@dimen/dp8"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1" />

        <TextView
            android:gravity="bottom"
            android:id="@+id/tv_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_birthday_cake"
            android:drawablePadding="@dimen/dp16"
            android:textSize="@dimen/sp16"
            android:drawableStart="@drawable/ic_birthday_cake" />

        <View
            android:layout_marginTop="@dimen/dp8"
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"/>

        <TextView
            android:gravity="bottom"
            android:id="@+id/tv_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/dp16"
            android:textSize="@dimen/sp16"
            android:drawableStart="@drawable/ic_phone" />

<!--        <View-->
<!--            android:layout_marginTop="@dimen/dp8"-->
<!--            android:background="@color/line"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/dp1" />-->

<!--        <TextView-->
<!--            android:gravity="bottom"-->
<!--            android:id="@+id/tv_location"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/dp8"-->
<!--            android:textColor="@color/colorPrimary"-->
<!--            android:drawableLeft="@drawable/ic_location_mark"-->
<!--            android:drawablePadding="@dimen/dp16"-->
<!--            android:text="Hà Nội"-->
<!--            android:textSize="@dimen/sp16"-->
<!--            android:drawableStart="@drawable/ic_location_mark" />-->

    </LinearLayout>



    <View
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp4" />

    <TextView
        android:layout_marginHorizontal="@dimen/dp16"
        android:gravity="bottom"
        android:id="@+id/tv_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="@dimen/dp16"
        android:text="@string/update_info"
        android:textSize="@dimen/sp16"
        android:drawableStart="@drawable/ic_user"
        android:drawableRight="@drawable/ic_next"
        android:drawableEnd="@drawable/ic_next" />

    <View
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />

    <TextView
        android:layout_marginHorizontal="@dimen/dp16"
        android:gravity="bottom"
        android:id="@+id/tv_update_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_lock_v2"
        android:drawablePadding="@dimen/dp16"
        android:text="@string/update_password"
        android:textSize="@dimen/sp16"
        android:drawableStart="@drawable/ic_lock_v2"
        android:drawableRight="@drawable/ic_next"
        android:drawableEnd="@drawable/ic_next" />

    <View
        android:layout_marginHorizontal="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />

    <TextView
        android:id="@+id/tv_version"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:text="@string/version"
        android:textSize="@dimen/sp12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16" />


</LinearLayout>